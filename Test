  <script>
  // === CONFIGURACI√ì EDITABLE ===
  const CONFIG = {
    titol: "Copa BlackoutRugby Catalunya",
    dates: "6‚Äì7 setembre 2025",
    tipus: "Fase de grups + eliminat√≤ries",
    equips: [
      { nom:"Dem√† M'afeitar√†s", manager:"DMA", grup:"A", csr:307000 },
      { nom:"Baskonia", manager:"BAS", grup:"A", csr:330000 },
      { nom:"RIB", manager:"RIB", grup:"A", csr:274000 },
      { nom:"Oyoc√°ntaro", manager:"OYO", grup:"A", csr:293000 },
      { nom:"Setanta", manager:"SET", grup:"B", csr:297000 },
      { nom:"Vichelocregos-dos-Outeiros", manager:"VDO", grup:"B", csr:275000 },
      { nom:"Equip 7", manager:"E7", grup:"B", csr:250000 },
      { nom:"Equip 8", manager:"E8", grup:"B", csr:245000 }
    ],
    // Partits de grup (exemple). Hora en local CEST.
    grups: {
      A: [
        { data:"2025-09-06 10:00", local:"Dem√† M'afeitar√†s", visitant:"Baskonia", estat:"pendent"},
        { data:"2025-09-06 12:00", local:"RIB", visitant:"Oyoc√°ntaro", estat:"pendent"},
        { data:"2025-09-06 16:00", local:"Dem√† M'afeitar√†s", visitant:"RIB", estat:"pendent"},
        { data:"2025-09-06 18:00", local:"Baskonia", visitant:"Oyoc√°ntaro", estat:"pendent"},
        { data:"2025-09-07 10:00", local:"Dem√† M'afeitar√†s", visitant:"Oyoc√°ntaro", estat:"pendent"},
        { data:"2025-09-07 12:00", local:"Baskonia", visitant:"RIB", estat:"pendent"}
      ],
      B: [
        { data:"2025-09-06 10:00", local:"Setanta", visitant:"Vichelocregos-dos-Outeiros", estat:"pendent"},
        { data:"2025-09-06 12:00", local:"Equip 7", visitant:"Equip 8", estat:"pendent"},
        { data:"2025-09-06 16:00", local:"Setanta", visitant:"Equip 7", estat:"pendent"},
        { data:"2025-09-06 18:00", local:"Vichelocregos-dos-Outeiros", visitant:"Equip 8", estat:"pendent"},
        { data:"2025-09-07 10:00", local:"Setanta", visitant:"Equip 8", estat:"pendent"},
        { data:"2025-09-07 12:00", local:"Vichelocregos-dos-Outeiros", visitant:"Equip 7", estat:"pendent"}
      ]
    },
    // Eliminat√≤ries (es poden omplir quan es coneguin)
    eliminatories: [
      { fase:"Semifinal 1", data:"2025-09-07 16:00", local:"1r Grup A", visitant:"2n Grup B", estat:"pendent" },
      { fase:"Semifinal 2", data:"2025-09-07 18:00", local:"1r Grup B", visitant:"2n Grup A", estat:"pendent" },
      { fase:"Final", data:"2025-09-07 21:00", local:"Guanyador S1", visitant:"Guanyador S2", estat:"pendent" }
    ]
  };

  // === UTILITATS ===
  const fmt = (s)=> new Date(s.replace(' ','T')+':00').toLocaleString('ca-ES',{dateStyle:'medium', timeStyle:'short'});
  const by = (k)=> (a,b)=> (a[k]>b[k]?1:-1);

  // === RENDER ===
  function renderHero(){
    document.getElementById('titol').textContent = CONFIG.titol;
    document.getElementById('datesPill').textContent = `Edici√≥ 2025 ¬∑ ${CONFIG.dates} ¬∑ Online`;
    document.getElementById('subtitol').textContent = `${CONFIG.equips.length} equips ¬∑ ${CONFIG.tipus}`;
    document.getElementById('kpiEquips').textContent = CONFIG.equips.length;
    const totalPartits = CONFIG.grups.A.length + CONFIG.grups.B.length + CONFIG.eliminatories.length;
    document.getElementById('kpiPartits').textContent = totalPartits;
    document.getElementById('any').textContent = new Date().getFullYear();
  }

  function renderCalendari(){
    const tbody = document.querySelector('#taulaCalendari tbody');
    tbody.innerHTML = '';
    const files = [];
    for(const [grup, llista] of Object.entries(CONFIG.grups)){
      llista.forEach(p => files.push({data:p.data, fase:`Grup ${grup}`, txt:`${p.local} vs ${p.visitant}`, estat:p.estat}))
    }
    CONFIG.eliminatories.forEach(e=> files.push({data:e.data, fase:e.fase, txt:`${e.local} vs ${e.visitant}`, estat:e.estat}))
    files.sort((a,b)=> new Date(a.data.replace(' ','T')) - new Date(b.data.replace(' ','T')));
    files.forEach(r=>{
      const tr=document.createElement('tr');
      tr.innerHTML = `<td>${fmt(r.data)}</td><td>${r.fase}</td><td>${r.txt}</td><td><span class="badge ${r.estat==='finalitzat'?'ok':(r.estat==='en joc'?'warn':'')}">${r.estat}</span></td>`;
      tbody.appendChild(tr);
    });
  }

  function renderEquips(){
    const cont = document.getElementById('llistaEquips');
    cont.innerHTML = '';
    CONFIG.equips.sort(by('nom')).forEach(e=>{
      const div = document.createElement('div');
      div.className='card';
      div.innerHTML = `<h3 style="margin:0 0 4px">${e.nom}</h3>
        <div class="muted">Manager: <strong>${e.manager}</strong> ¬∑ Grup ${e.grup} ¬∑ CSR ${e.csr.toLocaleString('ca-ES')}</div>`;
      cont.appendChild(div);
    })
  }

  function renderPartitsGrups(){
    const cont = document.getElementById('partitsGrups');
    cont.innerHTML='';
    for(const [grup, partits] of Object.entries(CONFIG.grups)){
      const div = document.createElement('div');
      div.className='card';
      div.innerHTML = `<h3 style="margin:0 0 8px">Grup ${grup}</h3>`;
      const tbl = document.createElement('table');
      tbl.innerHTML = `<thead><tr><th>Data</th><th>Local</th><th></th><th>Visitant</th><th>Estat</th></tr></thead>`;
      const tb = document.createElement('tbody');
      partits.forEach(p=>{
        const tr = document.createElement('tr');
        tr.innerHTML = `<td>${fmt(p.data)}</td><td>${p.local}</td><td style="text-align:center">vs</td><td>${p.visitant}</td><td>${p.estat}</td>`;
        tb.appendChild(tr);
      })
      tbl.appendChild(tb); div.appendChild(tbl); cont.appendChild(div);
    }
  }

  function renderEliminatories(){
    const cont = document.getElementById('bracket');
    cont.innerHTML='';
    const semis = CONFIG.eliminatories.filter(e=> e.fase.includes('Semifinal'));
    const final = CONFIG.eliminatories.find(e=> e.fase==='Final');

    const col1 = document.createElement('div'); col1.className='card';
    col1.innerHTML = `<h3 style="margin:0 0 8px">Semifinals</h3>`;
    const t1 = document.createElement('table'); t1.innerHTML = `<thead><tr><th>Data</th><th>Local</th><th></th><th>Visitant</th><th>Estat</th></tr></thead>`;
    const tb1 = document.createElement('tbody');
    semis.forEach(s=>{
      const tr=document.createElement('tr'); tr.innerHTML = `<td>${fmt(s.data)}</td><td>${s.local}</td><td style="text-align:center">vs</td><td>${s.visitant}</td><td>${s.estat}</td>`; tb1.appendChild(tr);
    });
    t1.appendChild(tb1); col1.appendChild(t1);

    const col2 = document.createElement('div'); col2.className='card';
    col2.innerHTML = `<h3 style="margin:0 0 8px">Final</h3>`;
    const t2 = document.createElement('table'); t2.innerHTML = `<thead><tr><th>Data</th><th>Local</th><th></th><th>Visitant</th><th>Estat</th></tr></thead>`;
    const tb2 = document.createElement('tbody');
    if(final){ const tr=document.createElement('tr'); tr.innerHTML = `<td>${fmt(final.data)}</td><td>${final.local}</td><td style="text-align:center">vs</td><td>${final.visitant}</td><td>${final.estat}</td>`; tb2.appendChild(tr); }
    t2.appendChild(tb2); col2.appendChild(t2);

    cont.appendChild(col1); cont.appendChild(col2);
  }

  function renderClassificacio(){
    const cont = document.getElementById('taulesClassificacio');
    cont.innerHTML='';
    const grups = ['A','B'];
    grups.forEach(g=>{
      const div=document.createElement('div');
      div.className='card';
      div.innerHTML = `<h3 style="margin:0 0 8px">Grup ${g}</h3>`;
      const tbl=document.createElement('table');
      tbl.innerHTML = `<thead><tr><th>Equip</th><th>PJ</th><th>PG</th><th>PE</th><th>PP</th><th>PF</th><th>PC</th><th>Pts</th></tr></thead>`;
      const tb=document.createElement('tbody');
      // Exemple: classificaci√≥ inicial en blanc (0s). Substitueix amb dades reals.
      CONFIG.equips.filter(e=> e.grup===g).forEach(e=>{
        const tr=document.createElement('tr');
        tr.innerHTML = `<td>${e.nom}</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td><td>0</td>`;
        tb.appendChild(tr);
      });
      tbl.appendChild(tb); div.appendChild(tbl); cont.appendChild(div);
    })
  }

  function renderProperPartitIUltims(){
    // Troba el pr√≤xim partit pendent m√©s proper en el temps
    const ara = new Date();
    const tots = [...CONFIG.grups.A, ...CONFIG.grups.B, ...CONFIG.eliminatories];
    const pendents = tots.filter(p=> p.estat==='pendent').map(p=> ({...p, when:new Date(p.data.replace(' ','T'))}));
    pendents.sort((a,b)=> a.when - b.when);
    const prox = pendents.find(p=> p.when > ara);
    const div = document.getElementById('properPartit');
    if(prox){ div.innerHTML = `<strong>${prox.local}</strong> vs <strong>${prox.visitant}</strong><br><span class="muted">${fmt(prox.data)}</span>`; }
    else { div.textContent = 'Cap partit pendent'; }

    // √öltims resultats (si hi hagu√©s finalitzats)
    const acabats = tots.filter(p=> p.estat==='finalitzat').slice(-5);
    const ul = document.getElementById('ultimsResultats'); ul.innerHTML='';
    if(acabats.length===0){ ul.innerHTML = '<li>Encara no hi ha resultats.</li>'; return; }
    acabats.forEach(p=>{
      const li=document.createElement('li'); li.textContent = `${p.local} ${p.marcador||''} ${p.visitant} ¬∑ ${fmt(p.data)}`; ul.appendChild(li);
    })
  }

  function enviarFormulari(ev){
    ev.preventDefault();
    const f = ev.target;
    alert(`Inscripci√≥ rebuda (exemple)\nEquip: ${f.equip.value}\nManager: ${f.manager.value}\nGrup: ${f.grup.value}`);
    f.reset();
    return false;
  }

  // Inicialitza
  renderHero();
  renderCalendari();
  renderEquips();
  renderPartitsGrups();
  renderEliminatories();
  renderClassificacio();
  renderProperPartitIUltims();
  </script>
</body>
